<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.hellojava.mapper.IUserMapper">
    <resultMap id="userResult" type="user">
        <id column="userId" property="userId"></id>
        <result column="userName" property="userName"></result>
        <result column="userCall" property="userCall"></result>
        <result column="userEmail" property="userEmail"></result>
    </resultMap>
    <select id="findUserByUserName" resultMap="userResult" parameterType="string">
        select * from users_copy where userName=#{userName}
    </select>
    <insert id="loadReg" parameterType="user">
        insert into users_copy values (default,#{userName},md5(#{userPwd}),default,#{userEmail})
    </insert>
    <select id="loadUser" resultType="user" parameterType="user">
        select * from users_copy where userName=#{userName} and userPwd=md5(#{userPwd})
    </select>
    <select id="loadUserById" resultMap="userResult" parameterType="int">
        select * from users_copy where userId=#{userId}
    </select>
    <select id="loadAllUser" resultMap="userResult">
        select * from users_copy
    </select>
    <select id="getTotalCount" resultType="int" >
        select count(userId) from users_copy
    </select>
    <select id="loadAllUsers" resultMap="userResult" parameterType="string">
        select * from users_copy where userName like '%' #{cont} '%'
    </select>
    <select id="getTotalCounts" resultType="int" parameterType="string">
        select count(userId) from users_copy where userName like '%' #{cont} '%'
    </select>
    <insert id="addUser" parameterType="user">
        insert into users_copy values (default,#{userName},default,#{userCall},#{userEmail})
    </insert>
    <delete id="delUserRole" parameterType="int">
        delete from user_role_mapping where uid=#{userId}
    </delete>
    <delete id="delUserRoles" parameterType="String">
        delete from user_role_mapping where uid in
        <foreach collection="array" item="uId" separator="," open="(" close=")">
            #{uId}
        </foreach>
    </delete>
    <delete id="deleteUserById" parameterType="int">
        delete from users_copy where userId=#{userId}
    </delete>
    <delete id="deleteUser" parameterType="String">
        delete from users_copy
        <where>
            userId in
            <foreach collection="array" item="uId" separator="," open="(" close=")">
                #{uId}
            </foreach>
        </where>
    </delete>
    <update id="updateUser" parameterType="user">
        update users_copy set userName=#{userName},userCall=#{userCall},userEmail=#{userEmail} where userId=#{userId}
    </update>
    <select id="getRole1" resultType="role" parameterType="int">
        select * from roles where roleId not in(select rId from user_role_mapping where uid=#{userId})
    </select>
    <select id="getRole2" resultType="role" parameterType="int">
        select * from roles where roleId in(select rId from user_role_mapping where uid=#{userId})
    </select>

    <delete id="deleteRoleId">
        delete from user_role_mapping where uid=#{userId} and rid in
            <foreach collection="list" item="rid" separator="," open="(" close=")">
                #{rid}
            </foreach>

    </delete>

    <insert id="addRoleId">
        insert into user_role_mapping values
        <foreach collection="list" item="rid" separator=",">
            (#{userId},#{rid})
        </foreach>
    </insert>

</mapper>